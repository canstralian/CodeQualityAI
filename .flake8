[flake8]
max-line-length = 88  # Consistent with Black
extend-ignore = E203, W503  # Compatibility with Black
exclude = .venv,migrations,.git,__pycache__
# Enable advanced checks
select = C,E,F,W,B,B950
# Add plugins for more comprehensive analysis
require-version = 3.9.0
plugins =
    flake8-bugbear
    flake8-comprehensions
    flake8-eradicate
    flake8-broken-line